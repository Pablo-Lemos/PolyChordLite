FC = ftn
MPIF90C = ftn
CXX = cc
CXX = cc

CPP = $(CC)
LD = $(FC)
LDSHARED = $(LD) -shared

# Archive tool
AR = ar rv


ifneq ($(NERSC_HOST),)
#setting for Edison/Cori on NERSC
FFLAGS = -fpp -fpic -qopenmp -dynamic -axMIC-AVX512,CORE-AVX2
CXXFLAGS = -fpic -qopenmp -dynamic -axMIC-AVX512,CORE-AVX2
CFLAGS += -fpic
endif

ifdef IPO
# Archive tool for compiling with ipo.
AR = xiar rv
endif

